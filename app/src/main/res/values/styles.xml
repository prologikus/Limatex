<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>

        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <!-- No title on action bar -->
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">?android:attr/colorPrimaryDark</item>
        <item name="android:statusBarColor">?android:attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>

        <item name="android:fontFamily">@font/ralewaymedium</item>
        <item name="fontFamily">@font/ralewaymedium
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->


